<h1 class="display-5 mt-5 mb-4 fw-bold text-center">Manage Events</h1>

<table id="eventsTable" class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date.strftime('%B %d, %Y') %></td>
        <td><%= event.formatted_time %></td>
        <td><%= event.location %></td>
        <td>
          <%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Event', new_admin_event_path, class: 'd-block mx-auto btn-lg btn-success mt-3' %>
<%= link_to "back to admin dashboard".html_safe, admins_path, class: "d-block mx-auto btn btn-secondary mt-1 btn-lg px-4 gap-3" %>
